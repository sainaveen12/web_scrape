<h1><%=@restaurant.name.capitalize%></h1>

<ul>
  <% @categories.each do |article| %>
  <li><%= article.name %></li>
  <ol>
    <% Item.where(category_id: article.id).each do |item| %>

    <li><%= item.name %><br>
    <%= item.price %><br>
    <%= item.description %></li>
    <% end %>

  </ol>

  <% end %>
</ul>
